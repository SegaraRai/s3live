{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020",
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
    ],
    "paths": {
      "~/*": [
        "src/*",
      ],
    },
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
}
