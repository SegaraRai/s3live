{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ESNext",
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
  },
    "include": [
      "api/**/*.json",
      "api/**/*.ts",
      "api/**/*.d.ts",
      "lib/**/*.json",
      "lib/**/*.ts",
      "lib/**/*.d.ts",
    ],
  "exclude": [
    "dist",
    "node_modules",
  ],
}
